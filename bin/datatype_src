#
# logic
#
  function is_boolean
  {
    case "${1}" in
      true | false )
        return 0
        ;;

      * )
        return 1
        ;;
    esac
  }

  function is_empty_string
  {
    if [[ ! -z "${1}" ]]; then
      return 1
    fi

    return 0
  }

  function is_integer
  {
    if is_empty_string "${1}" \
      || ! [[ "${1}" =~ ^[0-9]+$ ]] \
      && ! [[ "${1}" =~ ^-[0-9]+$ ]]; then
      return 1
    fi

    return 0
  }

  function is_negative_integer
  {
    if ! is_integer "${1}" \
      || [[ "${1}" -ge 0 ]]; then
      return 1
    fi

    return 0
  }

  function is_positive_integer
  {
    if ! is_integer "${1}" \
      || [[ "${1}" -lt 0 ]]; then
      return 1
    fi

    return 0
  }